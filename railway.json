{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn main:app -b 0.0.0.0:$PORT --workers 1 --threads 2 --timeout 30",
        "restartPolicyType": "ON_FAILURE",
        "healthCheckPath": "/health",
        "healthCheckTimeout": 10
    }
}
